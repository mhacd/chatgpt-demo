---
import bg from './png/chating.gif'
---
<div bg='#f86a87' min-h-screen>
  <div class="mh-blur">
    <div flex >
      <img  src={bg} alt="Blurred background image">
    </div>
  </div>
  <div class="mh-content" min-h-screen dark:bg="#060000e6"  bg="#eee">
    <slot />
  </div>
</div>
<style is:global>
.mh-blur {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: blur(5px);
    z-index: 1;
  }
  .mh-content{
      position: relative;
      z-index: 2;
  }
</style>

